<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tv_trailer_type"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:text="Official Trailer"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="8dp"
        android:paddingRight="4dp"
        android:gravity="right"
        android:textColor="@color/title_text"
        android:background="@color/full_black"
        />


    <ImageView
        android:id="@+id/iv_movies_details_trailer_img"
        android:layout_width="300dp"
        android:layout_height="150dp"
        android:layout_below="@id/tv_trailer_type"
        android:layout_marginLeft="8dp"
        android:paddingTop="50dp"
        android:background="@drawable/img_dummy_movies_details_trailer"
        android:src="@drawable/ic_play_circle_outline_white_12dp" />

    <TextView
        android:id="@+id/tv_trailer_description"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/iv_movies_details_trailer_img"
        android:text="Trailer"
        android:layout_marginLeft="8dp"
        android:padding="4dp"
        android:textColor="@color/title_text"
        android:background="@color/full_black"
        />

</RelativeLayout>